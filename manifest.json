{
  "name": "GDPR",
  "version": "1.0",
  "description": "Check if site complies to the GDPR!",
  "permissions": ["tabs" , "activeTab", "declarativeContent", "storage","background"],
  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Check the GDPR Compliance Status",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
